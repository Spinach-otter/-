swiper {
  height: 750rpx;
}
swiper image {
  width: 100%;
  height: 100%;
}
.goods-info-box {
  padding: 10px;
  padding-right: 0;
  background-color: white;
}
.goods-info-box .price {
  color: #c00000;
  font-size: 18px;
  margin: 10px 0;
}
.goods-info-box .goods-info-body {
  display: flex;
  justify-content: space-between;
}
.goods-info-box .goods-info-body .goods-name {
  font-size: 20px;
  padding-right: 10px;
}
.goods-info-box .goods-info-body .favi {
  width: 80px;
  font-size: 12px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1px solid #efefef;
  color: gray;
}
.remark-body {
  margin-top: 5px;
  margin-left: 5px;
  margin-right: 5px;
}
.remark-body .remark-item {
  height: 80px;
  background-color: white;
  border-radius: 10px;
  display: flex;
  margin-bottom: 5px;
}
.remark-body .remark-item .avatar {
  margin-top: 15px;
  height: 50px;
  width: 50px;
  border-radius: 50%;
  margin-right: 10px;
  margin-left: 5px;
}
.remark-body .remark-item .remark-content {
  line-height: 80px;
}